{% extends "layout.html" %}
{%block style%}
<style type="text/css">

nav.next_page{
  display: none;
}
#tag_panel dd{
    float: left;
 
}
#tag_panel dd a{
    display: block;
    padding: 3px;
}

div.item-like{
  background: url('/static/img/like.gif') 10px 9px no-repeat;
  padding-left: 30px;
}
div.item-like-user-icon{
  padding: 1px 2px;
}
</style>
{%endblock%}
{%block csslink%}
<link rel="stylesheet" href="{{g.config['static']}}/static/css/lightbox.css" type="text/css" media="screen" />
{%endblock%}
{%block script%}
<script src="{{g.config['static']}}/static/js/lightbox.js"></script>
<script type="text/javascript" src="http://www.7rice.org/demofile/waterfall/setwaterfall.js"></script>
{%endblock%}
{%block body%}
    
    <div id="content">    
       {%for a in photos%}
        
       {% include 'item.html' %}

    {%else%}
      <p>加载数据失败</p>
        {%endfor%}
    <div style="clear:both;">&nbsp;</div>
    </div>

<span id="__next_max_id" style="display:none;">{{next}}</span>
 <nav class="next_page"><a href="?page=2&next={{next}}">下一页</a></nav>
<div id="loadding">努力加载中......</div>

    




<script type="text/javascript">
$(function(){
  $("#content div").setwaterfall();
});
</script>
{%endblock%}